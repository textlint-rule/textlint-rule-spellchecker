{
  "name": "textlint-rule-spellchecker",
  "version": "0.1.1",
  "description": "textlint rule to check spellings with native spellchecker (NSSpellChecker, Hunspell, or the Windows 8 Spell Check API)",
  "main": "lib/spellchecker.js",
  "scripts": {
    "build": "babel src -d lib --source-maps",
    "prepublish": "npm run --if-present build",
    "test": "npm-run-all lint mocha",
    "lint": "eslint src test",
    "mocha": "mocha"
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "textlint",
    "rule",
    "english",
    "spellchecker"
  ],
  "author": "nodaguti",
  "license": "MIT",
  "bugs": "https://github.com/nodaguti/textlint-rule-spellchecker/issues",
  "homepage": "https://github.com/nodaguti/textlint-rule-spellchecker",
  "repository": "nodaguti/textlint-rule-spellchecker",
  "dependencies": {
    "npm-run-all": "^1.5.3",
    "spellchecker": "^3.2.3",
    "textlint-rule-helper": "^1.1.5"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "~2.2.0",
    "eslint-config-airbnb": "^6.1.0",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "textlint": "^6.0.1",
    "textlint-tester": "^1.1.0"
  }
